<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.keitai2013.practice.keiziban.heallin"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.keitai2013.practice.keiziban.heallin.StartActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jp.keitai2013.practice.keiziban.heallin.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"            
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="jp.keitai2013.practice.keiziban.heallin.BoardActivity"
            android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_board" >
        </activity>
        <activity
            android:name="jp.keitai2013.practice.keiziban.heallin.ContributionActivity"
            android:label="@string/title_activity_contribution"
            android:theme="@style/AppTheme.Contribute"
            android:screenOrientation="portrait"            
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateVisible|adjustResize"
            >
        </activity>
        <activity
            android:name="jp.keitai2013.practice.keiziban.heallin.SignUpActivity"
            android:screenOrientation="portrait"            
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_sign_up" >
        </activity>
    </application>

</manifest>
